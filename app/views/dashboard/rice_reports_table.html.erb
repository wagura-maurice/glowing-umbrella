  <thead>
    <tr>
      <th>Farmer Name</th>
      <th>Phone Number</th>
      <th>Farmer Group</th>
      <th>Reporting Time</th>
      <th>KG of Seed Planted</th>
      <th>Bags Harvested</th>
      <th>Pishori Bags</th>
      <th>Super Bags</th>
      <th>Other Bags</th>
