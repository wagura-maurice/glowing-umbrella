<br />
<div class="col-md-4"></div>
<div class="col-md-4 well" >
	<%= form_tag :post_reset_password, method: :post do %>
		<fieldset>
			<legend>Change your password</legend>
			<div class="form-group">
		    	<label for="login-credentials">Email</label>
		    	<div class="form-control"><%= @user.email %></div>
		    </div>
		    <div class="form-group">
		    	<label for="login-password">Password</label>
		    	<%= password_field_tag :password, nil,  class: "form-control", placeholder: "Enter password" %>
		    </div>
		    <div class="form-group">
		    	<label for="login-password">Password confirmation</label>
		    	<%= password_field_tag :password_confirmation, nil,  class: "form-control", placeholder: "Confirm password" %>
		    </div>
		    <div>
		    	<%= hidden_field_tag :token, @token %>
		    	<%= submit_tag 'Change password', class: "btn btn-raised btn-primary" %>
		    </div>
		</fieldset>
	<% end %>
</div>
<div class="col-md-4"></div>
