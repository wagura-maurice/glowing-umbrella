<div class="col-md-4"></div>
<div class="col-md-4 well" >
	<%= form_tag sessions_path, method: :post do %>
		<fieldset>
			<legend>Sign in to eGranary</legend>
			<div class="form-group">
		    	<label for="login-credentials">Username or Phone</label>
		    	<%= text_field_tag :phone_number_or_username, nil, class: "form-control", placeholder: "Enter username or Phone" %>
		    </div>
		    <div class="form-group">
		    	<label for="login-password">Password</label>
		    	<%= password_field_tag :password, nil,  class: "form-control", placeholder: "Enter password" %>
		    </div>
		    <div>
		    	<%= submit_tag 'Login', class: "btn btn-primary" %>
		    </div>
		</fieldset>
	<% end %>
</div>
<div class="col-md-4"></div>
