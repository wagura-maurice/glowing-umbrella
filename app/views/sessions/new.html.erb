<div class="col-md-4"></div>
<div class="col-md-4 well" >
	<%= form_tag sessions_path, method: :post do %>
		<fieldset>
			<legend>Sign in to eGranary</legend>
			<div class="form-group">
		    	<label for="login-credentials">Email</label>
		    	<%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
		    </div>
		    <div class="form-group">
		    	<label for="login-password">Password</label>
		    	<%= password_field_tag :password, nil,  class: "form-control", placeholder: "Enter password" %>
		    </div>
		    <div>
		    	<%= submit_tag 'Login', class: "btn btn-primary" %>
		    </div>
		</fieldset>
	<% end %>
	<%= link_to 'Reset Password', 'reset_password_form' %>
</div>
<div class="col-md-4"></div>
